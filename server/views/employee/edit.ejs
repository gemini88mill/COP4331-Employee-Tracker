<% include ../partials/header %>

<div class = "container-fluid">
    <br>
    <h1 class = "text-center">EDIT PROFILE</h1>
    <form action = "/employee/edit/<%= employee._id %>?_method=PUT" method="POST">
        <div class = "form-group" style="width: 40%; margin: 25px auto;">
            <label>First Name</label>
            <input class = "form-control" type = "text" name = "firstName" value="<%= employee.firstName %>" maxlength="12" autofocus pattern="^[A-Z]'?[- a-zA-Z]+$" required>
        </div>
        <div class = "form-group" style="width: 40%; margin: 25px auto;">
            <label>Last Name</label>
            <input class = "form-control" type = "text" name = "lastName" value="<%= employee.lastName %>" maxlength="12" pattern="^[A-Z]'?[- a-zA-Z]+$" required>
        </div>
        <div class = "form-group" style="width: 40%; margin: 25px auto;">
            <label>Email Address</label>
            <input class = "form-control" type = "email" name = "email" value="<%= employee.email %>" required>
        </div>
        <div class = "form-group" style="width: 40%; margin: 25px auto;">
            <label>Job Position</label>
            <input class = "form-control" type = "text" value="<%= employee.position %>" placeholder="Deputy Director of the Parks and Recreation Department" name = "position">
        </div>
        <div class = "form-group" style="width: 40%; margin: 25px auto;">
            <label>Profile Picture</label>
            <input class = "form-control" type = "text" value="<%= employee.picture %>"  name = "picture">
        </div>
        <div class = "form-group" style="width: 40%; margin: 25px auto;">
            <label>Username</label>
            <input class = "form-control" type = "text" name = "username" value="<%= employee.username %>" pattern="[a-z0-9]{4,12}" readonly>
        </div>
        <div class="form-group" style="width: 40%; margin: 25px auto;">
            <br>
            <button type="submit" class="btn btn-secondary btn-block">Submit</button>
        </div>
    </form>
</div>

<% include ../partials/footer %>