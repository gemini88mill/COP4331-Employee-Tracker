<% include ../partials/header %>

<div class = "container-fluid">
    <br>
    <h1 class = "text-center">CREATE TASK</h1>
    <form action = "/task/create" method="POST">
        <div class = "form-group" style="width: 50%; margin: 25px auto;">
            <label>Task Name</label>
            <input class = "form-control" type = "text" name = "task[name]" placeholder = "Pawnee Cares Telethon" required>
        </div>
        <div class = "form-group" style="width: 50%; margin: 25px auto;">
            <label>Task Description</label>
            <textarea class="form-control" name = "task[description]" rows="5" placeholder = "Call everyone! Fire Jerry. Love Ann Perkins." required></textarea>
        </div>
        <div class = "form-group" style="width: 50%; margin: 25px auto;">
            <label>Due Date</label>
            <input class = "form-control" type = "date" name = "task[due]" min="2017-11-24" required>
        </div>
        <div class="form-group" style="width: 50%; margin: 25px auto;">
            <label>Assign to Employees</label>
                <select id="dates-field2" class="multiselect-ui form-control" multiple="multiple">
                    <% employees.forEach(function(employee){ %>
                    <option value="<%= employee._id %>"><%= employee.firstName %> <%= employee.lastName %></option>
                    <% }); %>
                </select>
            <br>
            <button type="submit" class="btn btn-secondary btn-block">Submit</button>
        </div>
    </form>
</div>

<% include ../partials/footer %>