<% include partials/header %>

<div class = "container-fluid">
    <br>
    <h1 class = "text-center">REGISTER</h1>
    <form action = "/register" method="POST">
        <div class = "form-group" style="width: 40%; margin: 25px auto;">
            <label>First Name</label>
            <input class = "form-control" type = "text" name = "firstName" placeholder = "Leslie" maxlength="12" autofocus pattern="^[A-Z]'?[- a-zA-Z]+$" required>
        </div>
        <div class = "form-group" style="width: 40%; margin: 25px auto;">
            <label>Last Name</label>
            <input class = "form-control" type = "text" name = "lastName" placeholder = "Knope" maxlength="12" pattern="^[A-Z]'?[- a-zA-Z]+$" required>
        </div>
        <div class = "form-group" style="width: 40%; margin: 25px auto;">
            <label>Email Address</label>
            <input class = "form-control" type = "email" name = "email" placeholder = "lknope@pawnee.gov" required>
        </div>
        <div class = "form-group" style="width: 40%; margin: 25px auto;">
            <label>Username</label>
            <input class = "form-control" type = "text" name = "username" placeholder = "lknope" pattern="[a-z0-9]{4,12}" required>
        </div>
        <div class="form-group" style="width: 40%; margin: 25px auto;">
            <label>Password</label>
            <input type="password" class="form-control" name = "password" placeholder="password" required>
            <br>
            <button type="submit" class="btn btn-secondary btn-block">Submit</button>
        </div>
    </form>
</div>

<% include partials/footer %>